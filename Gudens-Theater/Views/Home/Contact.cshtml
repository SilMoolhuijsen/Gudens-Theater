@model Gudens_Theater.Models.Person
@{
    ViewData["Title"] = "Contact";
    ViewData["page"] = "contacttekst";
}
<h1>@ViewData["Title"]</h1>

<p>Contactformulier:</p>

<form method="post"> 
    <div> voornaam: <input type="text" name="firstname" /></div>
    @Html.ValidationMessageFor(m => m.firstname)
    <div> achternaam: <input type="text" name="lastname" /></div>
    @Html.ValidationMessageFor(m => m.lastname)
    <div> email: <input type="text" name="email" /></div>
    @Html.ValidationMessageFor(m => m.email)
    <input type="submit" value="verstuur" />
</form>


@if(Model!= null){
    <p>hallo @Model.firstname die achternaam @Model.lastname heeft</p>
}